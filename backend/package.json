{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Note Taking Application with MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc -p tsconfig.prod.json && echo '{ \"type\": \"module\" }' > dist/package.json",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "notes",
    "mongodb",
    "express",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "google-auth-library": "^10.3.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "long": "^5.3.2",
    "mongoose": "^8.18.0",
    "nodemailer": "^7.0.6",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "nodemon": "^3.1.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/server.ts"
  }
}
